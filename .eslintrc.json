{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          ["@hooks", "./src/hooks/*"],
          ["@components", "./src/components/*"],
          ["@layouts", "./src/layouts/*"],
          ["@utils", "./src/utils/*"],
          ["@typings", "./src/typings/*"],
          ["@states", "./src/states/*"],
          ["@pages", "./src/pages/*"]
        ]
      }
    }
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "next",
    "next/core-web-vitals",
    "plugin:prettier/recommended"
  ]
}
